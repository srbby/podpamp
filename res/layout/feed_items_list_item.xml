<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingRight="5dp"
				android:paddingTop="2dp"
				android:paddingBottom="2dp">

	<TextView android:id="@+id/txt_feed_item_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="1dp"
			android:textSize="18dp"
			android:textStyle="bold"/>

	<TextView android:id="@+id/txt_feed_item_desc"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_alignParentLeft="true"
			  android:layout_below="@+id/txt_feed_item_title"
			  android:maxLines="4"
			  android:singleLine="false"
			  android:textSize="14dp"/>

	<TextView android:id="@+id/txt_feed_item_published"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_alignParentLeft="true"
			  android:layout_below="@+id/txt_feed_item_desc"
			  android:singleLine="true"
			  android:textSize="12dp"
			  android:textStyle="bold"
			  android:layout_marginTop="2dp"/>

	<TextView android:id="@+id/txt_feed_item_length"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_alignParentRight="true"
			  android:layout_below="@+id/txt_feed_item_desc"
			  android:singleLine="true"
			  android:textSize="12dp"
			  android:textStyle="bold"
			  android:layout_marginTop="2dp"/>

</RelativeLayout>