<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="5dp">

	<ImageView android:id="@+id/img_feed_icon"
			   style="@style/FeedIcon"/>

	<TextView android:id="@+id/txt_feed_title"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_alignParentTop="true"
			  android:textStyle="bold"
			  android:textSize="18dp"/>

	<TextView android:id="@+id/txt_feed_subtitle"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_below="@+id/txt_feed_title"
			  android:textStyle="bold"
			  android:textSize="16dp"/>

	<ListView android:id="@+id/feed_items_list"
			  style="@style/ListView"
			  android:layout_below="@+id/img_feed_icon"/>
</RelativeLayout>