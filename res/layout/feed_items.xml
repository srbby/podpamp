<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="5dp">

	<ImageView android:id="@+id/img_feed_icon"
			   android:layout_width="64dp"
			   android:layout_height="64dp"
			   android:layout_alignParentLeft="true"
			   android:layout_alignParentTop="true"
			   android:contentDescription="@string/icon_desc"
			   android:src="@drawable/icon_rss"
			   android:adjustViewBounds="true"
			   android:scaleType="centerInside"
			   android:layout_marginRight="5dp"
			   android:layout_marginBottom="5dp"/>

	<TextView android:id="@+id/txt_feed_title"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_alignParentTop="true"
			  android:textStyle="bold"
			  android:textSize="18dp"/>

	<TextView android:id="@+id/txt_feed_subtitle"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_below="@+id/txt_feed_title"
			  android:textStyle="bold"
			  android:textSize="16dp"/>

	<ListView android:id="@+id/feed_items_list"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:layout_below="@+id/img_feed_icon"
			  android:drawSelectorOnTop="false" />
</RelativeLayout>