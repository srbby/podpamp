<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
				style="@style/ListItemContainer">

	<ImageView android:id="@+id/img_feed_icon"
			   style="@style/FeedIconMedium"/>

	<com.neopixl.pixlui.components.textview.TextView
		android:id="@+id/txt_feed_title"
		style="@style/ListItemTitle"
		android:layout_toRightOf="@+id/img_feed_icon"
		pixlui:typeface="designosaur.ttf"/>

	<TextView android:id="@+id/txt_new_feeds_count"
			  style="@style/AdditionalInfo"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_below="@+id/txt_feed_title"/>

	<TextView android:id="@+id/txt_starred_items_count"
			  style="@style/AdditionalInfo"
			  android:drawableRight="@drawable/icon_star_small"
			  android:layout_alignParentRight="true"
			  android:layout_below="@+id/txt_feed_title"
			  android:drawablePadding="3dp"/>

</RelativeLayout>