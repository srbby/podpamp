<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				style="@style/ListItemContainer">

	<ImageView android:id="@+id/img_feed_icon"
			   style="@style/FeedIcon"/>

	<TextView android:id="@+id/txt_feed_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/img_feed_icon"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="5dp"
			android:textSize="18dp"
			android:textStyle="bold"/>

	<TextView android:id="@+id/txt_new_feeds_count"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/img_feed_icon"
			  android:layout_alignBottom="@+id/img_feed_icon"
			  android:layout_marginLeft="5dp"/>

</RelativeLayout>