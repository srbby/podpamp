<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--Layouts-->
	<style name="PageContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="ListItemContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="ButtonsContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:layout_marginBottom">3dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<style name="HorizontalButtonsContainer" parent="ButtonsContainer">
		<item name="android:orientation">horizontal</item>
	</style>

	<!--ProgressBar-->
	<style name="ProgressBar">
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:visibility">invisible</item>
	</style>

	<!--Images-->
	<style name="FeedIcon">
		<item name="android:layout_width">72dp</item>
		<item name="android:layout_height">72dp</item>
		<item name="android:contentDescription">@string/icon_desc</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:scaleType">centerInside</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="FeedIconMedium" parent="FeedIcon">
		<item name="android:layout_width">82dp</item>
		<item name="android:layout_height">82dp</item>
	</style>

	<style name="FeedIconLarge" parent="FeedIcon">
		<item name="android:layout_width">104dp</item>
		<item name="android:layout_height">104dp</item>
	</style>

	<style name="StarIcon">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:contentDescription">@string/star_desc</item>
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:src">@drawable/icon_star_small</item>
		<item name="android:visibility">invisible</item>
	</style>

	<!--Buttons-->
	<style name="Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:background">@drawable/button_custom</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">16dp</item>
	</style>

	<!--ListViews-->
	<style name="ListView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:drawSelectorOnTop">false</item>
	</style>

	<style name="PaddedListView" parent="ListView">
		<item name="android:paddingTop">5dp</item>
	</style>

	<!--TextViews-->
	<style name="PageTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/title_color</item>
	</style>

	<style name="PageSubTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18dp</item>
		<item name="android:maxLines">3</item>
	</style>

	<style name="ListItemTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">19dp</item>
		<item name="android:textColor">@color/title_color</item>
	</style>

	<style name="Description">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">false</item>
		<item name="android:textSize">15dp</item>
	</style>

	<style name="DetailsDescription" parent="Description">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="AdditionalInfo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">12dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:textColor">@color/unread_item_color</item>
	</style>
</resources>