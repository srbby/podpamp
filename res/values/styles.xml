<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--Layouts-->
	<style name="PageContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="ListItemContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="ButtonsContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<style name="HorizontalButtonsContainer" parent="ButtonsContainer">
		<item name="android:orientation">horizontal</item>
	</style>

	<!--Images-->
	<style name="FeedIcon">
		<item name="android:layout_width">64dp</item>
		<item name="android:layout_height">64dp</item>
		<item name="android:contentDescription">@string/icon_desc</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:scaleType">centerInside</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<!--Buttons-->
	<style name="Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:background">@drawable/button_custom</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">16dp</item>
	</style>

	<!--ListViews-->
	<style name="ListView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:drawSelectorOnTop">false</item>
	</style>

	<!--TextViews-->
	<style name="PageTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18dp</item>
	</style>

	<style name="PageSubTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16dp</item>
	</style>

	<style name="ListItemTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18dp</item>
	</style>

	<style name="Description">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">false</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="AdditionalInfo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">12dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">2dp</item>
	</style>
</resources>